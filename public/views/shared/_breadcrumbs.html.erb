<%# BEGIN BC EDIT - don't show breadcrumbs for top level records %>
<% if defined?(@context) && !@context.blank? && @context.length > 2 %>
<%# END BC EDIT %>
<div class="clear">
    <nav aria-label="hierarchical navigation" class="breadcrumbs-length-<%= @context.length %>">
      <ul class="breadcrumb">
	<% @context.each do |bread| %>
	<% if bread[:crumb]; crumb = bread[:crumb]; crumb += " (#{bread[:identifier]})" if bread[:identifier] %>
	<li>
	  <%= badge_for_type(bread[:type]) %>
	  <% if bread[:uri].blank? %>
	    <%= process_mixed_content(crumb).html_safe %>
	  <% else %>
	    <a href='<%=app_prefix(bread[:uri]) %>'>
		<%= process_mixed_content(crumb).html_safe %>
	    </a>
	  <% end %>
	</li>
	<% end %>
	<% end %>
      </ul>
    </nav>
</div>
<% end %>