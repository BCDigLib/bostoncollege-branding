<%# handles modals.  Requires: modal_id, title, modal_body %>
<div class="modal fade" id="<%=modal_id %>" tabindex="-1" role="dialog" aria-modal="true" aria-labelledby="<%= modal_id%>Label">
  <div class="modal-dialog">
    <div class="modal-content">
      <header class="modal-header">
        <button type="button" class="close" id="<%= modal_id %>_header_close" data-dismiss="modal" aria-label="<%= I18n.t("actions.close") %>">&times;</button>
        <%# BEGIN BC EDIT - web accessibility validators flag an error when the modal template code is inserted into the main body with an empty header tag. %>
        <h2 class="modal-title h3" id="<%= modal_id %>Label"><%= (title.empty? ? "Information" : title) %></h2>
        <%# END BC EDIT %>
      </header>
      <div class="modal-body">
        <%= modal_body %>
      </div>
      <footer class="modal-footer">
        <button type="button" class="btn btn-default" id="<%= modal_id %>_footer_close" data-dismiss="modal" aria-label="<%= I18n.t("actions.close") %>"><%= I18n.t("actions.close") %></button>
        <% if title != t('actions.cite') %>
          <%# BEGIN BC EDIT - web accessibility validators flag an error when the modal template code is inserted into the main body with an empty button. %>
          <button type="button" class="btn btn-primary action-btn">OK</button>
          <%# END BC EDIT %>
        <% end %>
      </footer>
    </div>
  </div>
</div>
